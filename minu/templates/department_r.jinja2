{% extends "base.jinja2" %}
{% block content %}


    <h3>Departments</h3>

    <table class="table">
        <thead>
            <tr>
                <th> <a href="{{ request.route_url('department_view',
                                                    _query=(('sort','department'),('dir', dir))) }}">
                    Department Name</a></th>
                </tr>
            <tbody>
                {% for department in departments %}
                    <tr>
                        <td><a href="{{ request.route_url('department_edit',
                                                           dep_id=department.department_id) }}">
                            {{ department.department_name }} </a></td>
                    </tr>
                {% endfor %}
            </tbody>
    </table>
    <ul class="pagination pagination-center">
        <li>{{ departments.pager(format='$link_first$link_previous~2~$link_next$link_last',
                curpage_attr={ 'class':'active' },
                dotdot_attr={ 'class':'disabled' })|safe }}</li>
    </ul>



{% endblock %}