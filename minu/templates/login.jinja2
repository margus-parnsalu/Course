
{% extends "base.jinja2" %}
{% block content %}


    <h3>Login:</h3>{{message}}{{came_from}}

    <div class="well">

        <form action="" method="post" name="LoginForm">

         {% include 'form_error.jinja2' %}

          <div class="form-group">
            {{ form.came_from }}
          </div>
          <div class="form-group">
            {{ form.login.label }}
            {{ form.login(size=10) }}
          </div>
          <div class="form-group">
            {{ form.password.label }}
            {{ form.password() }}
          </div>
          <div class="form-group">
              <button type="submit" class="btn btn-default">Login</button>
          </div>
        </form>

    </div>


{% endblock %}