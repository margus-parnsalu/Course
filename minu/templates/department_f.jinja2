{% extends "base.jinja2" %}
{% block content %}

    <h3>Add Department</h3>

    <div class="well">

        <form action="" method="post" name="DepartmentForm">

          {% include 'form_error.jinja2' %}

          <div class="form-group">
            {{ form.department_name.label }}
            {{ form.department_name(size=60) }}
          </div>

          <div class="form-group">
              <button type="submit" class="btn btn-default">Submit</button>
         </div>
        </form>

    </div>
{% endblock %}